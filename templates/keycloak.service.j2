[Unit]
Description=KeyCloak Server
After=network.target

[Service]
Type=idle
Environment=JBOSS_HOME={{ keycloak_home_link }} JBOSS_LOG_DIR={{ keycloak_home_version }}/logs "JAVA_OPTS={{ keycloak_java_opts }}"
User=keycloak
Group=keycloak
ExecStart={{ keycloak_service['exec_start'] }}
TimeoutStartSec=600
TimeoutStopSec=600

[Install]
WantedBy=multi-user.target
